@model  HW.Models.RegisterModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Register</title>
    <style type="text/css">
        body {
            margin: 20pt !important;
        }

        .error {
            color: red;
        }

        .form-horizontal2 {
            padding-left: 30%;
        }
    </style>
</head>
<body>
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
          media="screen" />

    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        <div class="form-horizontal ">
            <h2 class="form-signin-heading">
                Register
            </h2>
            <div class="form-group">
                @Html.LabelFor(m => m.Seller.SellerName, new { @class = "control-label col-md-2 col-md-offset-2" })
                @Html.TextBoxFor(m => m.Seller.SellerName, new { @class = "form-control col-md-2 col-md-offset-2" })
                <div>
                    @Html.ValidationMessageFor(m => m.Seller.SellerName, "", new { @class = "error" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Seller.Product, new { @class = "control-label col-md-2 col-md-offset-2" })
                @Html.TextBoxFor(m => m.Seller.Product, new { @class = "form-control col-md-2 col-md-offset-2" })
                <div>
                    @Html.ValidationMessageFor(m => m.Seller.Product, "", new { @class = "error" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Information.Product, new { @class = "control-label col-md-2 col-md-offset-2" })
                @Html.TextBoxFor(m => m.Information.Product, new { @class = "form-control col-md-2 col-md-offset-2" })
                <div>
                    @Html.ValidationMessageFor(m => m.Seller.Product, "", new { @class = "error" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Seller.Country, new { @class = "control-label col-md-2 col-md-offset-2" })
                @Html.TextBoxFor(m => m.Seller.Country, new { @class = "form-control col-md-2 col-md-offset-2" })
                <div>
                    @Html.ValidationMessageFor(m => m.Seller.Country, "", new { @class = "error " })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="row">
                    <div>
                        @Html.LabelFor(m => m.Information.StartDeliveryDate, new { @class = "control-label col-md-2 col-md-offset-2" })
                    </div>
                    <div class="col-md-2 col-md-offset-2">
                        @Html.EditorFor(m => m.Information.StartDeliveryDate, "{0:dd-MM-yyyy}", new { @class = "form-control col-md-2 col-md-offset-2" })
                    </div>
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.Information.StartDeliveryDate, "", new { @class = "error" })
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div>
                        @Html.LabelFor(m => m.Information.EndDeliveryDate, new { @class = "control-label col-md-2 col-md-offset-2" })
                    </div>
                    <div class="col-md-2 col-md-offset-2">
                        @Html.EditorFor(m => m.Information.EndDeliveryDate, "{0:dd-MM-yyyy}", new { @class = "form-control col-md-2 col-md-offset-2" })
                    </div>
                    <div>
                        <div class="row">
                            @Html.ValidationMessageFor(m => m.Information.EndDeliveryDate, "", new { @class = "error" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
                    <input type="submit" value="Submit" class="col-md-4 col-md-offset-4 btn btn-primary" />
                </div>
                <br />
                <br />
                <div id="dvMessage" style="display:none" class="alert alert-danger">
                    <strong>Error!</strong>
                    <span>@ViewBag.Message</span>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>